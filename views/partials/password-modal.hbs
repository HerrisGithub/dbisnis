<div class="modal fade" id="pass" style="padding-top: 130px">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Email dan Telepon</h4>
            </div>
            <div class="modal-body">
               
                <div class="row">
                    <div class="col-md-3" style="padding-left: 0">
                       Password Baru
                    </div>
                    <div class="col-md-9">
                        <input type="password" class="form-control" data-bind="value:prof.passwordBaru">
                          <strong><p style="padding-left: 10px; color: red; font-size: 9pt" 
                            id="username" data-bind="text:prof.passwordBaruException"></p></strong> 
                    </div>
                </div>
                 <br>
                <div class="row">
                    <div class="col-md-3" style="padding-left: 0">
                       Ulangi Password Baru
                    </div>
                    <div class="col-md-9">
                        <input type="password" class="form-control" data-bind="value:prof.cpasswordBaru">
                          <strong><p style="padding-left: 10px; color: red; font-size: 9pt" 
                            id="username" 
                            data-bind="text:prof.cpasswordBaruException">
                            </p></strong> 
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-3" style="padding-left: 0">
                       Password Sekarang
                    </div>
                    <div class="col-md-9">
                        <input type="password" class="form-control" data-bind="value:prof.passwordSekarang">
                         <strong><p style="padding-left: 10px; color: red; font-size: 9pt" 
                            id="username" data-bind="text:prof.passwordSekarangException"></p></strong> 
                            <p></p>
                    </div>
                    
                </div>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click:prof.changePassword">Save changes</button>
            </div>
        </div>
    </div>
</div>
