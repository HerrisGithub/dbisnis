{{> menu}}
<style>
    .mark{
        background-color: orange;
        color: red;
        font-weight: 900
    }
</style>
<div >
 <div  class="col-md-10" id="product1" style="padding-left: 0; padding-right: 0">
    <div class="col-md-12 padding0">
    </div>
    <div class="col-md-12 padding0">
          <div class="panel panel-default">
              <div class="panel-heading">Users</div>
                    <div class="panel-body panel-body-content">
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-4"></div>    
                            <div class="col-md-2">
                                <div class="Pager1"></div>
                            </div>
                        </div> 
                           <br>
                        <div class="row">
                            <div class="col-md-3 padding-left0" data-bind="foreach: filter.filters"> 
                                <div  class="col-md-12 padding-left0" data-bind="if: Type == 'text'">
                                    <div class="col-md-6 text-alignl" data-bind="text:Name+' :'"></div>
                                    <div class="col-md-6 floatl">
                                        <input class="floatl" type="text" 
                                        data-bind="value: Value, valueUpdate: 'afterkeydown'" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row all0">
                                <div class="col-md-12 all0">
                                    <div class="col-md-3" style="padding-left: 0">
                                        <div class="col-md-6 all0 text-alignl">
                                            <p>Sort :</p>
                                        </div>
                                        <div class="col-md-3 padding-left0">
                                            <select class="floatl" data-bind="options: sorter.sortOptions, 
                                            optionsText: 'Name', value: sorter.currentSortOption"></select>
                                        </div>
                                        <div class="col-md-3">
                                              <select class="floatl" 
                                              data-bind="options: sorter.sortDirections, optionsText: 'Name', 
                                              value: sorter.currentSortDirection"></select> 
                                        </div>
                                    </div>
                                    <div class="col-md-4 all0">
                                         <div class="col-md-4">
                                             Filters :
                                         </div>
                                         <div class="col-md-6" data-bind="foreach: filter.filters" >
                                             <div class="col-md-2 all0" data-bind="if: Type == 'select'">
                                              <select data-bind=
                                                "options: Options, 
                                                optionsText: 'Name', 
                                                value: CurrentOption">
                                              </select>
                                            </div> 
                                         </div>
                                         
                                    </div>
                                    <div class="col-md-1 all0">
                                        <a class="floatr" href="#" 
                                        data-bind="click: pager.movePrevious, 
                                        enable: pager.currentPageIndex() > 0">Previous</a>
                                    </div>
                                    <div class="col-md-3 all0 text-alignc">
                                        <ul class="pagination pagination-sm all-top-bottom0" 
                                        data-bind="foreach: pager.numberPage()">
                                            <li><a href="#" class="active" data-bind="text:($data+1),
                                            click:$parent.pager.moveToThePage(($data))"></a></li>
                                        </ul>
                                    </div>
                                    <div class="col-md-1"  style="padding-top: 0; margin-top: 0; padding-bottom: 0;  margin-bottom: 0">
                                        <a href="#" data-bind="click: pager.moveNext, 
                                        enable: pager.currentPageIndex() < pager.maxPageIndex()">Next</a>
                                    </div>
                                    <div class="col-md-1"  style="padding-top: 0; margin-top: 0; padding-bottom: 0;  margin-bottom: 0">
                                        <input type="button" data-bind="click: pager.moveFirst" id="btnFirst" hidden>
                                    </div>
                                </div>
                        </div>
                        <p></p>
                        <div class="row all0">
                                <div class="col-md-12 all0">
                                    <div class="col-md-2">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" data-bind="checked:markAll,click:checkedValue_click">
                                                Mark All
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <button class="btn btn-info" data-bind="click:posting">Posting</button>
                                    </div>
                                     <div class="col-md-1" style="padding-left: 30px">
                                        <button class="btn btn-info" data-bind="click:unpost">Unpost</button>
                                    </div>
                                </div>
                        </div>
                  </div>  
                  <p></p>
                  <div class="NoRecords"></div>

                  <table class="table table-bordered table-hover">
                    <thead>
                        <tr style="background-color:#2b96b6; color: white; font-weight: 9000">
                            <th>No</th>
                            <th style="text-align: center">Image</th>
                            <th>Nama Produk</th>
                            <th>Variasi</th>
                            <th>Harga</th>
                            <th>Stok</th>
                            <th>Berat</th>
                            <th>Ongkos Kirim</th>
                            <th>Kategori</th>
                            <th>Post</th>
                            <th>Aksi</th>
                            
                        </tr>
                    </thead>
                     <tbody data-bind="foreach: pager.currentPageRecords" class="tb">
                        <tr data-bind="click:$root.selectedProd,attr:{id:$data.id}">
                            <td>
                                <span data-bind="text: $index()+1"></span>
                            </td>
                             <td>
                                <if data-bind="if:gambar != null" style="float: right">
                                   <img data-bind="attr:{src:gambar}" style="width: 50px;">
                                </if>
                                <if data-bind="if:gambar == null" >
                                    <i class="glyphicon glyphicon-picture" style="text-align: center;"></i>
                                </if>
                            </td>
                            <td>
                                <span data-bind="text: nama"></span>
                            </td>
                            <td data-bind="foreach:variasi">
                                <li data-bind="text: nama"></li>
                            </td>
                            <td data-bind="foreach:variasi">
                                <li data-bind="text: harga"></li>
                            </td>
                            <td data-bind="foreach:variasi">
                                <li data-bind="text: stok"></li>
                            </td>
                            <td>
                                <span data-bind="text: berat"></span>
                            </td>
                            <td>
                                <span data-bind="text: ongkos_kirim"></span>
                            </td>
                              <td>
                                <span data-bind="text: kategori"></span>
                            </td>
                            <td>
                                <span data-bind="if:posting()===true"><i class="fa fa-check"></i></span>
                                <span data-bind="if:posting()===false"><i class="fa fa-remove"></i></span>
                            </td>
                          
                             <td>
                                <a class="btn btn-info" data-bind="click:$root.edit"> EDIT</a>
                            </td>
                        </tr>
                    </tbody>
                </table>  
            
            </div>
    </div> 

</div>
  <script src="/javascripts/penjual.js"></script>
<script>
    listProduct();
</script>
</div>
