<section id="modal" class="modal fade" tabindex="-1" data-width="760" style="width: 100%">
    <div class="modal-dialog" style="background-color: red; width: 900px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Edit Produk</h4>
            </div>
            <div class="modal-body">
                <div class="form-body">
                    <div class="form-group">
                          <div class="form-group">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a data-toggle="tab" href="#home">Produk</a></li>
                                    <li><a data-toggle="tab" href="#menu1">Variasi</a></li>
                                    <li><a data-toggle="tab" href="#menu2">Grosiran</a></li>
                                    <li><a data-toggle="tab" href="#menu3">Gambar</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div id="home" class="tab-pane fade in active">
                                        <br>
                                        <div class="row">
                                            <label class="col-sm-3 control-label">Nama Produk</label>
                                            <div class="col-sm-6">
                                                <input type="text" class="form-control" data-bind="value:$root.nama">
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <label class="col-sm-3 control-label">Berat</label>
                                            <div class="col-sm-6">
                                                <input type="text" class="form-control" data-bind="value:$root.berat">
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <label class="col-sm-3 control-label">Ongkos Kirim</label>
                                            <div class="col-sm-6">
                                                <input type="text" class="form-control" data-bind="value:$root.ongkos_kirim">
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <label class="col-sm-3 control-label">Kategori</label>
                                            <div class="col-sm-6">
                                                <input type="text" class="form-control" data-bind="value:$root.kategori">
                                            </div>
                                        </div>
                                    </div>
                                    <div id="menu1" class="tab-pane fade">
                                        <br>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="input-group">
                                                    <div class="input-group-addon">Nama</div>
                                                    <input type="text" data-bind="value:namaVariasi" class="form-control">
                                                </div>
                                            </div>
                                            
                                        </div>
                                        <p></p>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="input-group">
                                                    <div class="input-group-addon">Stok &nbsp;</div>
                                                    <input type="text" data-bind="value:stokVariasi" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="input-group">
                                                    <div class="input-group-addon">Harga</div>
                                                    <input type="text" data-bind="value:hargaVariasi" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <p></p>
                                            <button type="button" class="btn btn-info" style="float: right" data-bind="click:$root.addVariasi">Tambah</button>
                                        <br>
                                        <br>
                                        <br>
                                        <table class="table table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                     <th>Variasi</th>
                                                     <th>Nama</th>
                                                     <th >Harga</th>
                                                     <th colspan="2">Stok</th>
                                                     
                                                </tr>
                                            </thead>
                                            <tbody id="tabelVariasi" data-bind="foreach:variasi_()">
                                                <tr>
                                                    <td data-bind="text:($index()+1)"></td>
                                                    <td>
                                                        <input type="text"  data-bind="value:nama" class="form-control" required="required">
                                                    </td>
                                                    <td>
                                                        <input type="text"  data-bind="value:harga" class="form-control" required="required">
                                                    </td>
                                                    <td>
                                                        <input type="text"  data-bind="value:stok" class="form-control" required="required">
                                                    </td>
                                                    <td><a href="#" class="btn btn-danger" data-bind="click:$root.removeVariasi"><i class="fa fa-remove"></i></a></td>
                                                </tr>
                                                
                                            </tbody>
                                        </table>
                                            
                                    </div>
                                    <div id="menu2" class="tab-pane fade" >
                                         <br>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="input-group">
                                                    <div class="input-group-addon">Variasi</div>
                                                    <select  class="form-control" 
                                                    data-bind="  options: variasi,
                                                    optionsText: 'nama',
                                                    optionsValue: 'id',
                                                    value:variasiGrosir"></select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="input-group">
                                                    <div class="input-group-addon">Harga Satuan</div>
                                                    <input type="text" data-bind="value:satuanGrosir" class="form-control">
                                                </div>
                                            </div>
                                            
                                        </div>
                                     
                                        <p></p>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="input-group">
                                                    <div class="input-group-addon">Min Order</div>
                                                    <input type="text" data-bind="value:minOrder" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="input-group">
                                                    <div class="input-group-addon">Maks Order</div>
                                                    <input type="text" data-bind="value:maksOrder" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <p></p>
                                            <button type="button" class="btn btn-info" style="float: right" data-bind="click:$root.addGrosir">Tambah</button>
                                        <br>
                                        <br>
                                        <br>
                                        
                                        <table class="table table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Grosir</th>
                                                    <th>Min</th>
                                                    <th>Max</th>
                                                    <th>Harga Satuan</th>
                                                    <th style="text-align: center">Aksi</th>
                                                </tr>
                                            </thead>
                                            <tbody data-bind="foreach:hargaGrosir_()">
                                                <tr>
                                                    <td data-bind="if:typeof variasi != 'undefined'" style="width: 150px">
                                                        <p data-bind="text:variasi_name" style="width: 99px;float: left; 
                                                        
                                                        overflow-x: hidden; text-overflow: ellipsis;white-space: nowrap"></p>
                                                        <select class="form-control" style="width: 5px; float: left"
                                                         data-bind="options:variasi,
                                                         optionsText: 'nama',
                                                         optionsValue: 'id',value:variasi_name">
                                                         </select>
                                                    </td>
                                                    <td><input class="form-control" type="text" style="width: 100px" data-bind="value:min"></td>
                                                    <td><input class="form-control" type="text" style="width: 100px" data-bind="value:max"></td>
                                                    <td><input class="form-control" type="text"  data-bind="value:satuan"></td>
                                                    <td style="text-align: center"><button class="btn btn-danger" data-bind="click:$root.removeGrosir"><i class="fa fa-remove"></i></button></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        
                                          
                                    </div>
                                    <div id="menu3" class="tab-pane fade" >
                                          <br>
                                        <div class="row">
                                            <div id="uploadImage"></div> 
                                            <br>
                                        <table class="table table-bordered table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Gambar</th>
                                                        <th>Aksi</th>
                                                        
                                                    </tr>
                                                </thead>
                                                <tbody data-bind="foreach:gambarProduk_()">
                                                    <tr>
                                                        <td style="text-align: center"> 
                                                            <img data-bind="attr:{src:gambar}" style="width: 100px; height: 50px; background-repeat: round">
                                                        </td>
                                                        <td><a href='#' data-bind='click: $root.removeGambarProduk'><span class="glyphicon glyphicon-minus-sign"></span></a>
                                                        &nbsp;
                                                        <a href='#' data-bind='click: $root.setAsMain'><span class="glyphicon glyphicon-flag"></span> </a></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
                
            </div>
            <div class="modal-footer">
                    <button type="button" data-bind="click:$root.apply" class="btn blue">Apply</button>
                    <button type="button" data-bind="click:$root.save" class="btn blue">Save</button>
                    <button type="button" data-dismiss="modal" data-bind="click:$root.cancel" class="btn btn-default">Cancel</button>
                    
                    
                </div>
        </div>
    </div>
</section>
