{{> menu}}

<style>
	ul,li{
		list-style: none
	}
	.pnl{
		border-style: solid; border-color: white
	}
</style>
<div class="col-lg-9 profile-content" 
data-bind="event:{load:profs.loadProfileSeller()}">
    <div class="col-lg-12" style="padding: 0"></div>
	 	<div class="panel panel-default pnl" >
            <div class="panel-heading" style="padding-bottom: 20px">
					<i class="fa fa-info fa-fw"></i> Informasi Umum 

				<!-- ko if:profs.infoCollapse -->
					<a href="#" data-toggle="modal" style="float: right; 
					padding-top:0px; color: blueviolet" 
					data-bind="click:profs.collapseInfo">
						<i class="glyphicon glyphicon-chevron-up"></i>
					</a>
				<!-- /ko -->
				<!-- ko ifnot:profs.infoCollapse -->
					<a href="#" data-toggle="modal" style="float: right; 
					padding-top:0px; color: blueviolet" 
					data-bind="click:profs.collapseInfo">
						<i class="glyphicon glyphicon-chevron-down"></i>
					</a>
				<!-- /ko -->	
				<a data-toggle="modal" style="float: right; 
				padding-top:0px; padding-right: 10px;" 
				data-bind="click:profs.modalInformasiUmum">
					<i class="glyphicon glyphicon-edit" 
					style="font-size: 24pt"></i>
				</a>
            </div>
            <!-- ko if:profs.infoCollapse -->
				<div class="panel-body">
					<ul class="timeline">
						<li>
							<div class="timeline-panel">
								<div class="timeline-body row">
									<div class="col-md-2" style="padding-top: 30px; text-align: right" >
										Foto profil
									</div>
									<div class="col-md-4" style="height: 100%">
									<!-- ko if:profs.isNullOrWhiteSPace(profs.photo) -->
										<img src="/no-photo.png" alt="" style="height: 100%">
									<!-- /ko -->
									<!-- ko ifNot:profs.isNullOrWhiteSPace(profs.photo) -->
										<img data-bind="attr:{src:profs.photo}" style="height: 100%">
									<!-- /ko -->
									</div>
									
								</div>
							</div>
							<hr>
						</li>
						<li>
							<div class="timeline-panel">
								<div class="timeline-body row">
								<div class="col-md-2" 
								style="text-align: right">Nama Perusahaan</div>
									<div class="col-md-10 content" style="height: 100%; 
									color: grey" 
										data-bind="text:profs.company_name">
									</div>
									
								</div>
							</div>
							<hr>
						</li>
						<li>
							<div class="timeline-panel">
								<div class="timeline-body row">
										<div class="col-md-2" style="text-align: 
								right">Nama Pengelola</div>
									<div class="col-md-4 content" style="height: 100%; color: grey" 
										data-bind="text:profs.nama">
									</div>
									<div class="col-md-2" 
								style="text-align: right">Jenis Kelamin</div>
									<!-- ko if:profs.gender -->
									<div class="col-md-4 content" style="height: 100%; color: grey" 
										data-bind="text:'Laki - Laki'">
									</div>
								<!-- /ko -->
								<!-- ko if:!profs.gender() -->
									<div class="col-md-4 content" style="height: 100%; color: grey" 
										data-bind="text:'Perempuan'">
									</div>
								<!-- /ko -->
									
								</div>
							</div>
							<hr>
						</li>
						<li>
							<div class="timeline-panel">
								<div class="timeline-body row">
							
								<div class="col-md-12">
									<table class="table table-hover table-bordered">
										<thead>
											<tr>
												<th>Logo</th>
												<th>Nama Bank</th>
												<th>Cabang</th>
												<th>No. Rekening</th>
												<th>Atas Nama</th>
											</tr>
										</thead>
										<tbody>
											<!-- ko foreach:profs.bank -->
											<tr>
												<td >
													<img src="" 
													data-bind="attr:{src:$root.profs.getImageBank(bank_name)}"
													style="width: 100px">
												</td>
												<td data-bind="text:bank_name"></td>
												<td data-bind="text:bank_branch"></td>
												<td data-bind="text:account_number"></td>
												<td data-bind="text:account_name"></td>
											</tr>
											<!-- /ko -->
										</tbody>
									</table>
								</div>
								</div>
							</div>
							<hr>
						</li>
						
					
						<li>
							<div class="timeline-panel">
								<div class="timeline-body row">
									<div class="col-md-2" style="text-align: right">
										Deskripsi Perusahaan</div>
								<div class="col-md-10 content">
									<textarea required="required" class="form-control"
										style="text-align: justify;resize: none; width: 100%; height: 200px" 
										data-bind="value:profs.company_desc" readonly>
									</textarea>
								</div>
								</div>
							</div>
						</li>

					</ul>
				</div>
			<!-- /ko -->
        </div>
		<div class="panel panel-default pnl">
			<div class="panel-heading" style="padding-bottom: 20px">
					<i class="fa fa-phone fa-fw"></i> Email & Telepon 
					<!-- ko if:profs.contactCollapse -->
						<a href="#" data-toggle="modal" style="float: right; 
						padding-top:0px;  color: blueviolet" 
						data-bind="click:profs.collapseContact">
							<i class="glyphicon glyphicon-chevron-up"></i>
						</a>
					<!-- /ko -->
					<!-- ko ifnot:profs.contactCollapse -->
						<a href="#" data-toggle="modal" style="float: right; 
						padding-top:0px;  color: blueviolet" 
						data-bind="click:profs.collapseContact">
							<i class="glyphicon glyphicon-chevron-down"></i>
						</a>
					<!-- /ko -->	
				
					<a data-toggle="modal"
					onclick="document.getElementById('contact-seller').style.display='block'" style="float: right; padding-top:0px" >
						<i class="glyphicon glyphicon-edit" 
						style="font-size: 24pt;  padding-right: 10px;"></i>
					</a>
			</div>
			<!-- ko if:profs.contactCollapse -->
			<div class="panel-body">
					
					<ul class="timeline">
						<li>
							<div class="col-md-2" style="text-align: 
								right">Email</div>
									<div class="col-md-4 content" style="height: 100%; color: grey" 
										data-bind="text:profs.email">
									</div>
									<div class="col-md-2" style="text-align: right">
										Telepon</div>
								<div class="col-md-4 content" style="height: 100%;color: grey" 
									data-bind="text:profs.phone">
								</div>
						</li>
					</ul>
				
				</div>
					<!-- /ko -->
        </div>
		<div class="panel panel-default pnl">
			<div class="panel-heading" style="padding-bottom: 20px">
					<i class="glyphicon glyphicon-map-marker"></i> Address
					<!-- ko if:profs.addressCollapse -->
						<a href="#" data-toggle="modal" style="float: right; 
						padding-top:0px;  color: blueviolet" 
						data-bind="click:profs.collapseAddress">
							<i class="glyphicon glyphicon-chevron-up"></i>
						</a>
					<!-- /ko -->
					<!-- ko ifnot:profs.addressCollapse -->
						<a href="#" data-toggle="modal" style="float: right; 
						padding-top:0px;  color: blueviolet" 
						data-bind="click:profs.collapseAddress">
							<i class="glyphicon glyphicon-chevron-down"></i>
						</a>
					<!-- /ko -->	
				
					<a data-toggle="modal"
					onclick="document.getElementById('address-seller').style.display='block'" style="float: right; padding-top:0px" >
						<i class="glyphicon glyphicon-edit" 
						style="font-size: 24pt;  padding-right: 10px;"></i>
					</a>
			</div>
				<!-- ko if:profs.addressCollapse -->
			<div class="panel-body">
				
					<ul class="timeline">
						<li>
							<div class="timeline-panel">
								<div class="timeline-body row">
							<div class="col-md-2" style="text-align: 
								right">Provinsi</div>
									<div class="col-md-4 content" style="height: 100%; color: grey" 
										data-bind="text:profs.province">
									</div>
									<div class="col-md-2" style="text-align: right">
										Kota/Kabupaten</div>
								<div class="col-md-4 content" style="height: 100%;color: grey" 
									data-bind="text:profs.district">
								</div>
								</div>
								<hr>
							</div>
						</li>
						<li>
							<div class="timeline-panel">
								<div class="timeline-body row">
							<div class="col-md-2" style="text-align: 
								right">Kecamatan</div>
									<div class="col-md-4 content" style="height: 100%; color: grey" 
										data-bind="text:profs.subDistrict">
									</div>
									<div class="col-md-2" style="text-align: right">
										Kode Pos</div>
								<div class="col-md-4 content" style="height: 100%;color: grey" 
									data-bind="text:profs.postal_code">
								</div>
								</div>
								<hr>
							</div>
						</li>
						<li>
							<div class="timeline-panel">
								<div class="timeline-body row">
							<div class="col-md-2" style="text-align: 
								right">Alamat</div>
									<div class="col-md-10 content" style="height: 100%; color: grey" 
										data-bind="text:profs.address">
									</div>
									
								</div>
								<hr>
							</div>
						</li>
					</ul>
				</div>
					<!-- /ko -->
				
        </div>
		<div class="panel panel-default pnl">
			<div class="panel-heading" style="padding-bottom: 20px">
					<i class="glyphicon glyphicon-lock"></i> Password
						<a href="#" data-toggle="modal" style="float: right; 
						padding-top:0px;  color: blueviolet" >
						<i class="glyphicon ">&nbsp;</i>
						</a>
				
					<a href="#" data-toggle="modal"
					onclick="document.getElementById('password-seller').style.display='block'" style="float: right; padding-top:0px" >
						<i class="glyphicon glyphicon-edit" 
						style="font-size: 24pt;  padding-right: 10px;"></i>
					</a>
			</div>
			
				
        </div>
	
</div>

