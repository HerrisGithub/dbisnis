<style>
    #table tr:nth-child(even){
        background-color: #eee;
    }
    thead tr{
        background-color: #2b96b6 !important;color: white
        
    }
    #navLogo{
        visibility: visible;
    }    
</style>
{{>dashboard_admin}}
<div class="col-lg-9" style="padding-left: 40px" data-bind="attr:{load:adm.loadAdmin()}">
<div class="panel panel-default">
      <div class="panel-heading">
            <h3 class="panel-title">Pembayaran</h3>
      </div>
      <div class="panel-body">
          <div class="table-responsive">
              <table class="table table-hover table-bordered">
                  <thead>
                      <tr>
                          <th>Order Id</th>
                          <th>Nama Pembeli</th>
                           <th>Email Pembeli</th>
                            <th>Tujuan</th>
                            <th>Tgl. Pesan</th>
                            <th>Status Pembayaran</th>
                            <th>Verifikasi</th>
                            <th>Harga</th>
                            <th>Info Transfer</th>
                            <th>Bukti Transfer</th>
                             <th><i class="fa fa-gear fa-2x"></i></th>
                      </tr>
                  </thead>
                  <tbody id="table">
                      <!-- ko foreach:adm.orders -->
                      <tr>
                        <td data-bind="text:id"></td>
                        <td data-bind="text:name"></td>
                        <td data-bind="text:email"></td>
                        <td data-bind="text:province+', '+district+', '+sub_district+' ,'+postal_code+', '+address"></td>
                        <td data-bind="text:$root.p.moment(created_at)"></td>
                        <td data-bind="text:payment_status"></td>
                        <td data-bind="text:verification"></td>
                        <td data-bind="text:$root.p.formatLargeNumber(orders_total)"></td>
                        <td >
                            <p data-bind="text:'AN: '+bank_account.nama"></p>
                              <p data-bind="text:'AC: '+bank_account.rekening"></p>
                            <p data-bind="text:'BANK: '+bank_account.bank"></p>
                            <p data-bind="text:'Nominal: '+bank_account.nominal"></p>
                                
                        </td>
                        <td></td>
                        <td>
                            <button class="btn btn-success btn-sm" data-bind="click:$root.adm.suksesVerifikasi">Sukses</button>
                            <br>
                            <br>
                            <button class="btn btn-info btn-sm">Pending</button>
                            <br>
                            <br>
                            <button class="btn btn-danger btn-sm">Expired</button>
                        </td>
                      </tr>
                      <!-- /ko -->
                  </tbody>
              </table>
          </div>
          
      </div>
</div>
</div>


